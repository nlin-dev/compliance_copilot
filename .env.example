# ==============================================================================
# COMPLIANCE COPILOT - ENVIRONMENT CONFIGURATION
# ==============================================================================
# Copy this file to .env.local for local development
# NEVER commit .env files containing real secrets to version control
# ==============================================================================

# ==============================================================================
# APPLICATION
# ==============================================================================
# The base URL of your application (no trailing slash)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Application environment: development | staging | production
NODE_ENV=development

# Enable/disable verbose logging (true | false)
DEBUG=false

# ==============================================================================
# OPENAI CONFIGURATION
# ==============================================================================
# Get your API key from: https://platform.openai.com/api-keys
# Required scopes: Model capabilities (for embeddings and chat completions)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Model configuration (optional - defaults shown)
# OPENAI_CHAT_MODEL=gpt-4o-mini
# OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Organization ID (optional - for multi-org accounts)
# OPENAI_ORG_ID=org-xxxxxxxxxxxxxxxxxxxxxxxx

# ==============================================================================
# PINECONE VECTOR DATABASE
# ==============================================================================
# Get your API key from: https://app.pinecone.io/
# Create a Starter (free) index with 1536 dimensions and cosine metric
PINECONE_API_KEY=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Index name - must match the index created in Pinecone console
PINECONE_INDEX=compliance-copilot

# Environment/region (e.g., us-east-1, eu-west-1)
# PINECONE_ENVIRONMENT=us-east-1

# ==============================================================================
# UPSTASH REDIS (Rate Limiting & Caching)
# ==============================================================================
# Get credentials from: https://console.upstash.com/
# Create a free Redis database and copy the REST URL and token
UPSTASH_REDIS_REST_URL=https://xxxxxx-xxxxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ==============================================================================
# DATABASE (Vercel Postgres)
# ==============================================================================
# For local development, you can use:
# 1. Vercel Postgres (recommended): https://vercel.com/storage/postgres
# 2. Local PostgreSQL: postgresql://user:password@localhost:5432/compliance_copilot
# 3. Docker: docker run -p 5432:5432 -e POSTGRES_PASSWORD=password postgres

# Prisma database connection URL
DATABASE_URL=postgresql://user:password@localhost:5432/compliance_copilot?schema=public

# Direct connection URL (for Prisma migrations - bypasses connection pooling)
# Required for Vercel Postgres in production
# DIRECT_URL=postgresql://user:password@localhost:5432/compliance_copilot?schema=public

# ==============================================================================
# AUTHENTICATION (NextAuth.js)
# ==============================================================================
# Generate a secure secret: openssl rand -base64 32
# This is used to encrypt JWT tokens and session cookies
NEXTAUTH_SECRET=your-super-secret-key-minimum-32-characters-long

# Canonical URL of your site (must match your deployment URL in production)
NEXTAUTH_URL=http://localhost:3000

# Session configuration (optional - defaults shown)
# NEXTAUTH_SESSION_MAX_AGE=86400
# NEXTAUTH_SESSION_UPDATE_AGE=3600

# ==============================================================================
# OAUTH PROVIDERS (Optional - for social login)
# ==============================================================================
# Google OAuth: https://console.cloud.google.com/apis/credentials
# GOOGLE_CLIENT_ID=xxxxxxxxxxxx.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxx

# GitHub OAuth: https://github.com/settings/developers
# GITHUB_ID=xxxxxxxxxxxxxxxxxxxx
# GITHUB_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ==============================================================================
# RATE LIMITING
# ==============================================================================
# Requests per window for different endpoints
# Format: requests:window (e.g., 100:60 = 100 requests per 60 seconds)
# RATE_LIMIT_GLOBAL=100:60
# RATE_LIMIT_QUERY=20:60
# RATE_LIMIT_COMPLIANCE=10:60
# RATE_LIMIT_AUTH=5:900

# ==============================================================================
# SECURITY
# ==============================================================================
# Comma-separated list of allowed origins for CORS
# CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# Enable/disable security headers (default: true in production)
# SECURITY_HEADERS_ENABLED=true

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================
# Enable/disable specific features (true | false)
# FEATURE_COMPLIANCE_CHECKER=true
# FEATURE_QUERY_CACHING=true
# FEATURE_AUDIT_LOGGING=true
# FEATURE_DARK_MODE=true

# ==============================================================================
# MONITORING & ANALYTICS (Optional)
# ==============================================================================
# Vercel Analytics (automatically enabled on Vercel)
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Sentry DSN for error tracking: https://sentry.io/
# SENTRY_DSN=https://xxxxxxxx@xxx.ingest.sentry.io/xxxxxxx
# SENTRY_AUTH_TOKEN=

# ==============================================================================
# INGESTION SCRIPT CONFIGURATION
# ==============================================================================
# CMS PDF source URL (for offline ingestion script)
# CMS_PDF_URL=https://www.cms.gov/files/document/...

# Embedding batch size (default: 100)
# EMBEDDING_BATCH_SIZE=100

# Chunk configuration
# CHUNK_SIZE=800
# CHUNK_OVERLAP=200

# ==============================================================================
# DEVELOPMENT TOOLS
# ==============================================================================
# Enable Prisma Studio: npx prisma studio
# PRISMA_STUDIO_PORT=5555

# Enable React Query Devtools in development
# NEXT_PUBLIC_REACT_QUERY_DEVTOOLS=true
